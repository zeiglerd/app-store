{
	"env": {
		"node": true
	},
	"extends": "airbnb",
	"plugins": [
    "react"
  ],
	"rules": {
		"import/no-extraneous-dependencies": ["error", { "optionalDependencies": false, "peerDependencies": false }],
		"global-require": 0,
		"new-cap": 0,
		"no-console": ["error", { "allow": ["log"] }],
		"no-shadow": ["error", { "allow": ["doc", "docs", "err", "res"] }],
		"prefer-template": 0
	},
	"globals": {
		"describe": true,
		"it": true,
		"afterEach": true,
		"beforeEach": true
	}
}
