{
	"env": {
		"node": true
	},
	"extends": "airbnb",
	"plugins": [
    "react"
  ],
	"rules": {
		"new-cap": 0,
		"prefer-template": 0,
		"global-require": 0,
		"import/no-extraneous-dependencies": ["error", {"optionalDependencies": false, "peerDependencies": false}],
		"no-unused-vars": ["error", { "varsIgnorePattern": "[iI]gnored" }]
	},
	"globals": {
		"describe": true,
		"it": true
	}
}
